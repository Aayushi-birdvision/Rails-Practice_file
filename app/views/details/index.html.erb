<h1>Name of students</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th colspan = "3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @details.each do |detail| %>
    <tr>
      <td><%=detail.id%></td>
      <td><%=detail.first_name%></td>
      <td><%=detail.last_name%></td>
      <td><%= link_to 'show', detail_path(detail)%>
      <td><%= link_to 'edit', detail_path(detail)%>
      <td><%= link_to 'Delete', detail_path(detail),  data: {confirm: 'Are you sure?'}, method: :delete %></td>
    </tr>
   <% end %>
  </tbody>
</table>
<p>
<%= link_to 'Create new name', new_detail_path%></p>
